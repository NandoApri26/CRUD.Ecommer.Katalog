@using System.Collections;
@model List<Floram.Models.Entities.Keranjang>
@* @model IEnumerable<Floram.Models.Entities.Barang> *@

@{
    ViewBag.Title = "List Barang";
}

<h2 class="text-center mt-5">Keranjang Barang</h2>

<table class="table table-striped mt-5">
    <thead>
        <tr>
            @* <th scope="col">No Barang</th> *@
            <th scope="col" class="text-center">Image</th>
            <th scope="col">Nama Barang</th>
            <th scope="col" class="text-center">Deskripsi</th>
            <th scope="col">Harga</th>
            <th scope="col" class="text-center">Stok</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody class="table-light">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                    <tr>
                        @* <td>@item.IdBarangNavigation.Id</td> *@
                        <td class="text-center">
                            <img src=@item.IdBarangNavigation.Url alt="" style="width: 100%; height:250px; object-fit:contain;">
                        </td>
                        <td>@item.IdBarangNavigation.Nama</td>
                        <td>@item.IdBarangNavigation.Description</td>
                        <td>@item.IdBarangNavigation.Harga</td>
                        <td class="text-center">@item.IdBarangNavigation.Stok</td>
                        
                        <td class="text-center">
                            <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Barang" asp-action="Delete">Delete</a>
                        </td>

                    </tr>
            }
        }
        else {
                <h1>Data barang null</h1>
        }
    </tbody>
</table>